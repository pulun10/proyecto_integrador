
{{#each products}}
    <article class="card-container">
        <div class="card-img-container">
            <img src={{image}} alt="luffy">
        </div>
        <div class="card-text">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <p>$ {{price}}</p>
        </div>
        <a href="#" class="card-link">add to cart</a>
    </article>
{{/each}}
